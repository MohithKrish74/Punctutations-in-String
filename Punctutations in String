package com.company;

import com.sun.jdi.Value;
import org.w3c.dom.ls.LSOutput;

import java.security.spec.RSAOtherPrimeInfo;
import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.print("Enter the string: ");
        StringBuffer stringBuffer=new StringBuffer(in.nextLine());
        int counter=0;
        for(int i=0;i<stringBuffer.length();i++)
        {
            if(stringBuffer.charAt(i)=='!' || stringBuffer.charAt(i)=='.' || stringBuffer.charAt(i)==',' || stringBuffer.charAt(i)=='@' ||
                    stringBuffer.charAt(i)=='?')
                counter++;
        }
        System.out.println("The total number of punctuations is "+counter);

    }


}

